<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DarkThemeProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource DarkThemeWindowBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkThemeLightBlueBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
</ResourceDictionary>